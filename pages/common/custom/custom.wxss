/* pages/common/custom/custom.wxss */

.input-cell-group-default {
  display: flex;
  margin-top: 24rpx;
  background-color: #FFF;
}

.input-cell-group-default .input-cell{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 120rpx;
}

.input-cell-group-default .input-cell .title{
  margin-left: 30rpx;
  color: #181D24;
  font-size: 32rpx;
  width: 165rpx;
}

.input-cell-group-default .input-cell .value{
  width: 525rpx;
  font-size:32rpx;
}

.button-group {
  margin-top: 48rpx;
  margin-left: 30rpx;
  width: 690rpx;
}

.button-group button {
  width: 690rpx;
  height: 88rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #FFF;
  background-color: #C7C7C7;
  border: 0;
  font-size: 32rpx;
}

.button-group button::after {
  border: 0;
}

.button-group .enabled {
  background-color: #5FCD64;
}