<block wx:if="{{studentList}}">
  <view class="container">
    <view class="search-group">
      <view class="search">
        <view class="icon">
          <image src="http://superimage.xianshikeji.com/icon/superwxapp/student-search.png"></image>
        </view>
        <view class="input">
          <input placeholder="搜索" placeholder-class="search-placeholder"></input>
        </view>
      </view>
    </view>

    <view class="student-sort">
      <image src="http://superimage.xianshikeji.com/icon/superwxapp/student-attention.png"></image>
      <text>特别关注</text>
    </view>

    <view class="student-group">
      <block wx:for="{{studentList}}" wx:key="this">
        <movable-area class='movable-area'>
          <movable-view direction="horizontal" class='movable-view'>
            <view class="touch-item {{item.isTouchMove ? 'touch-move-active' : ''}}" bindtouchstart="touchStart" bindtouchmove="touchMove" data-index="{{index}}" bindtap="navigateToBasic">
              <view class="student-line">
                <view class="avatar">
                  <text>{{item.nameStr}}</text>
                </view>
                <view class="content">
                  <view class="info">
                    <view class="name">
                      <text>{{item.name}}</text>
                    </view>
                    <view class="other" wx:if="{{item.phone}}">
                      <text>{{item.phone}}</text>
                    </view>
                  </view>
                  <view class="subtitle">
                    <text wx:if="{{item.times}}">剩余{{item.times}}课时</text>
                  </view>
                </view>
              </view>
              <view class="delete-button" catchtap="catchDelete" data-index="{{index}}">删除</view>
            </view>
          </movable-view>
        </movable-area>
      </block>

    </view>

