/* pages/students/physical/index/index.wxss */

.data-map {
  display: flex;
  flex-direction: column;
  background-color: #fff;
  width: 750rpx;
}

.data-map .data-select {
  width: 720rpx;
  margin-left: 30rpx;
  margin-top: 38rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.data-map .data-select .select-span {
  width: 134rpx;
  height: 58rpx;
  background: #f2f2f2;
  border-radius: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #2b313d;
  font-size: 26rpx;
  margin-right: 50rpx;
}

.data-map .data-select .select {
  background: #E5F7E6;
  color: #2EAB34;
  border: 1rpx solid #5FCD64; 
}

.data-map .ff-data {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

ff-canvas {
  width: 690rpx;
  height: 400rpx;
}
