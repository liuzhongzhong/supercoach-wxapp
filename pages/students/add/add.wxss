/* pages/students/add/add.wxss */

page {
  background-color: #f7f7f7;
}

.container {
  margin-top: 24rpx;
}

.input-more {
  color: #2b87ff;
  font-size: 30rpx;
  font-weight: bold;
  width: 690rpx;
  margin-left: 30rpx;
  margin-top: 55rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 40rpx;
}

.input-more image {
  width: 26rpx;
  height: 22rpx;
  margin-left: 18rpx;
}

.input-more-open {
  justify-content: flex-start;
  margin-top: 40rpx;
}

.input-cell-group-big {
  display: flex;
  flex-direction: column;
  background-color: #fff;
  width: 750rpx;
  height: 170rpx;
  align-items: center;
  justify-content: center;
}

.input-cell-group-big .input-cell {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.input-cell-group-big .input-cell .title {
  display: flex;
  align-items: center;
  flex-direction: row;
  width: 250rpx;
}

.input-cell-group-big .input-cell .title .icon {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 28rpx;
  margin-left: 30rpx;
  margin-right: 24rpx;
}

.input-cell-group-big .input-cell .title .icon image {
  width: 28rpx;
  height: 28rpx;
}

.input-cell-group-big .input-cell .title .name {
  font-size: 34rpx;
  color: #181d24;
}

.input-cell-group-big .input-cell .content {
  width: 470rpx;
  display: flex;
  align-items: center;
}

.input-cell-group-big .input-cell .content input {
  width: 470rpx;
  font-size: 34rpx;
  text-align: right;
}

.input-cell-group-big .input-tips {
  color: #707888;
  font-size: 24rpx;
  width: 690rpx;
  display: flex;
  justify-content: flex-start;
  margin-top: 15rpx;
}

.common-bottom {
  width: 100%;
  height: 200rpx;
}