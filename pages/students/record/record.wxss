/* pages/students/record/record.wxss */

.weui-tab {
  position: relative;
  height: 100%;
}

.weui-tab__panel {
  box-sizing: border-box;
  height: 100%;
  padding-top: 50px;
  overflow: auto;
  -webkit-overflow-scrolling: touch;
}

.weui-navbar {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  position: absolute;
  z-index: 500;
  top: 0;
  width: 100%;
  border-bottom: 1rpx solid #f5f5f5;
  background-color: #fff;
}

.weui-navbar-fixed {
  position: fixed;
  top: 0;
  left: 0;
  background-color: #fff;
  display: flex;
  align-items: flex-end;
}

.weui-navbar__item {
  position: relative;
  display: block;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  padding: 13px 0;
  text-align: center;
}

.weui-navbar__item.weui-bar__item_on {
  color: #5fcd64;
  font-weight: bold;
}

.weui-navbar__slider {
  position: absolute;
  content: " ";
  left: 0;
  bottom: 0;
  width: 6em;
  height: 3px;
  background-color: #5fcd64;
  -webkit-transition: -webkit-transform 0.3s;
  transition: -webkit-transform 0.3s;
  transition: transform 0.3s, -webkit-transform 0.3s;
}

.weui-navbar__title {
  display: inline-block;
  font-size: 30rpx;
  max-width: 8em;
  width: auto;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-wrap: normal;
}

.weui-tab__content {
  margin-top: 48rpx;
}

.course-group {
  width: 690rpx;
  margin-left: 30rpx;
  display: flex;
  flex-direction: column;
}

.course-group .course {
  display: flex;
  align-items: center;
  flex-direction: row;
  width: 690rpx;
  background-color: #fff;
  height: 160rpx;
  border-radius: 12rpx;
  margin-bottom: 24rpx;

  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(160rpx);
  transform: translateX(160rpx);
  margin-left: -160rpx;
}

.course-group .touch-move-course {
  border-top-right-radius: 0rpx;
  border-bottom-right-radius: 0rpx;
}

.course-group .course .icon {
  width: 96rpx;
  height: 96rpx;
  margin-left: 32rpx;
  margin-right: 24rpx;
}

.course-group .course .icon image {
  width: 96rpx;
  height: 96rpx;
  border-radius: 6rpx;
}

.course-group .course .info {
  width: 400rpx;
  display: flex;
  flex-direction: column;
}

.course-group .course .info .time{
  color: #181D24;
  font-size: 30rpx;
  font-weight:bold;
  line-height: 56rpx;
}

.course-group .course .info .type{
  color: #707888;
  font-size: 26rpx;
}

.course-group .course .status {
  width: 106rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
  color: #FFC229;
  font-size: 26rpx;
  font-weight:bold;
}

.course-group .course .ready {
  color: #FFC229;
}

.course-group .course .complete {
  color: #5FCD64;
}

.course-group .course .cancel {
  color: #B2B3B7;
}



.movable-area, .movable-view {
  width: 690rpx;
  height: 160rpx;
  margin-bottom: 24rpx;
}

.touch-item {
  display: flex;
  overflow: hidden;
}

.touch-move-active .course, .touch-move-active .delete-button {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}

.delete-button {
  background-color: #ff3d3d;
  width: 160rpx;
  height: 160rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  -webkit-transform: translateX(160rpx);
  transform: translateX(160rpx);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  font-size: 26rpx;
  font-weight: bold;
  border-top-right-radius: 12rpx;
  border-bottom-right-radius: 12rpx;
}