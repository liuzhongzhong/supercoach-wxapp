/* pages/order/index/index.wxss */

page {
  background-color: #f7f7f7;
}

.container {
  margin-top: 25rpx;
}

.order {
  width: 100%;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  margin-bottom: 32rpx;
}

.order .title-group {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 40rpx;
  margin-left: 30rpx;
  width: 690rpx;
}

.order .title-group .user {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 400rpx;
}

.order .title-group .user .avatar {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  background-color: #2b87ff;
  color: #fff;
  font-size: 24rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 100%;
}

.order .title-group .user .name {
  display: flex;
  flex-direction: row;
  align-items: center;
  color: #181d24;
  font-weight: 500;
  font-size: 34rpx;
  margin-left: 24rpx;
}

.order .title-group .info {
  color: #707888;
  font-size: 26rpx;
  width: 290rpx;
  display: flex;
  justify-content: flex-end;
  font-weight: 500;
}

.order .title-group .refuse {
  color: #ff5050;
  font-weight: bold;
}

.order .title-group .agree {
  color: #5fcd64;
  font-weight: bold;
}

.order .content-group {
  display: flex;
  flex-direction: column;
  margin-top: 40rpx;
  margin-left: 30rpx;
  width: 690rpx;
}

.order .content-group .line {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  font-size: 28rpx;
  margin-bottom: 24rpx;
  height: 100%;
}

.order .content-group .line .title {
  display: flex;
  flex-direction: row;
  align-items: center;
  color: #707888;
  width: 150rpx;
}

.order .content-group .line .content {
  display: flex;
  flex-direction: row;
  align-items: center;
  color: #181d24;
  font-weight: 500;
  width: 560rpx;
}

.order .button-group {
  display: flex;
  flex-direction: row;
  margin-top: 32rpx;
  width: 690rpx;
  margin-left: 30rpx;
  margin-bottom: 64rpx;
  justify-content: space-between;
}

.order .button-group .refuse {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 228rpx;
  height: 88rpx;
  background: #fff;
  border-radius: 10rpx;
  color: #181d24;
  font-size: 32rpx;
}

.order .button-group .agree {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 430rpx;
  height: 88rpx;
  background: rgba(95, 205, 100, 1);
  border-radius: 10rpx;
  color: #fff;
  font-size: 32rpx;
  border: 0;
}

.order .button-group .agree::after {
  border: 0;
}

.order .no-button {
  margin-bottom: 40rpx;
}

.popup-view {
  width: 750rpx;
  height: 100%;
  position: fixed;
  top: -50rpx;
  left: 0;
  z-index: 99999;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.popup {
  width: 622rpx;
  background-color: #fff;
  border-radius: 20rpx;
}

.popup .title {
  font-size: 32rpx;
  font-weight: bold;
  color: #181d24;
  display: flex;
  justify-content: center;
  margin-top: 62rpx;
}

.popup .input-area {
  width: 506rpx;
  height: 280rpx;
  margin-top: 48rpx;
  border: 1rpx solid #D0D0D0;
  border-radius: 10rpx;
  margin-left: 58rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  
}

.popup .input-area textarea{
  width: 486rpx;
  height: 260rpx;
  font-size: 28rpx;
}

.input-area-placeholder {
  color: #cfcfcf;
  font-weight: 500;
  font-size: 28rpx;
}

.popup .content-list {
  margin-top: 24rpx;
  display: flex;
  flex-wrap: wrap;
  width: 506rpx;
  margin-left: 58rpx;
}

.popup .content-list .content {
  display: flex;
  flex-wrap: wrap;
  background-color: #f5f5f5;
  justify-content: center;
  align-items: center;
  color: #181d24;
  font-size: 22rpx;
  height: 56rpx;
  margin-right: 24rpx;
  padding-left: 15rpx;
  padding-right: 15rpx;
  margin-top: 24rpx;
}

.popup .button {
  margin-top: 72rpx;
  margin-bottom: 72rpx;
}

.popup .button button {
  width: 506rpx;
  height: 88rpx;
  background: #5fcd64;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  border: 0;
}

.popup .button button::after {
  border: 0;
}

.popup-view .close-button {
  width: 56rpx;
  height: 56rpx;
  margin-top: 64rpx;

}

.popup-view .close-button image {
  width: 56rpx;
  height: 56rpx;
}

