.course .course_right .course_date .scroll-block .scroll-date .date .day {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: bold;
  color: rgba(43, 49, 61, 1);
  height: 56rpx;
  width: 56rpx;
  margin-top: 15rpx;
}

.course .course_right .course_date .scroll-block .scroll-date .date .current_day {
  display: flex;
  flex-direction: column;
