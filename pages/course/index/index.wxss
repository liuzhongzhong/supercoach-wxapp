/* pages/course/index/index.wxss */

page {
  --height: 44px;
  --right: 190rpx;
}

.navigation-bar {
  overflow: hidden;
}

.navigation-bar .android {
  --height: 48px;
  --right: 222rpx;
}

.navigation-bar__inner {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 5001;
  height: var(--height);
  display: flex;
  align-items: center;
  padding-right: var(--right);
  width: calc(100% - var(--right));
}

.navigation-bar__inner .navigation-bar__left {
  position: relative;
  width: var(--right);
  padding-left: 16px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  align-items: center;
  -webkit-box-pack: center;
}

.navigation-bar__inner .navigation-bar__left .navigation-bar__btn {
  display: inline-block;
  vertical-align: middle;
  background-repeat: no-repeat;
}

.navigation-bar__inner .navigation-bar__left .navigation-bar__btn_goback {
  font-size: 12px;
  width: 36rpx;
  height: 36rpx;
  background-image: url("data:image/png;base64,");
  background-position: 50% 50%;
  background-size: cover;
}

.navigation-bar__inner .navigation-bar__left .navigation-bar__btn_goback:active {
  opacity: 0.5;
}

.navigation-bar__inner .navigation-bar__center {
  font-size: 17px;
  text-align: center;
  position: relative;
  flex: 1;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
}

.navigation-bar__inner .navigation-bar__right {
  margin-right: 16px;
}

.navigation-bar__placeholder {
  height: var(--height);
  background: #f8f8f8;
  position: relative;
  z-index: 50;
}

.course {
  display: flex;
  flex-direction: row;
}

.course .course_left {
  width: 94rpx;
}

.course .course_left .date {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 94rpx;
  height: 130rpx;
  border-bottom: 1rpx solid #e5e5e5;
  padding-top: 15rpx;
  background-color: #fff;
}

.course .course_left .date_fixed {
  position: fixed;
}

.course .course_left .date .year {
  display: flex;
  flex-direction: column;
  font-size: 22rpx;
  font-weight: 500;
  color: rgba(112, 120, 136, 1);
}

.course .course_left .date .month {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 25rpx;
  font-weight: 500;
  color: rgba(112, 120, 136, 1);
