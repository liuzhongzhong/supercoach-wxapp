/* pages/course/lesson/lesson.wxss */

.lesson-list {
  width: 690rpx;
  margin-left: 30rpx;
  margin-top: 45rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.lesson {
  display: flex;
  flex-direction: column;
  margin-bottom: 56rpx;
  margin-right: 30rpx;
}

.no-margin {
  margin-right: 0rpx;
}

.lesson .checked {
  width: 204rpx;
  height: 45rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  position: relative;
}

.lesson .checked radio {
  zoom: 0.8;
}

.lesson .background {
  width: 210rpx;
  height: 280rpx;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: -54rpx;
  background-color: #FFF;
}

.lesson .background image {
  width: 210rpx;
  height: 280rpx;
  border-radius: 12rpx;
}

.lesson .background .icon {
  width: 50rpx;
  height: 50rpx;
  margin-top: 10rpx;
}

.lesson .background .icon image{
  width: 50rpx;
  height: 50rpx;
}

.lesson .background .name{
  color: #5FCD64;
  font-size: 28rpx;
  margin-top: 30rpx;
}

.lesson .title {
  width: 178rpx;
  height: 48rpx;
  border-radius: 0rpx 0rpx 12rpx 12rpx;
  color: #FFFFFF;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  padding-left: 16rpx;
  padding-right: 16rpx;
  margin-top: -48rpx;
  z-index: 999;
}

.lesson .times {
  color: #707888;
  font-size: 24rpx;
  margin-top: 16rpx;
  width: 178rpx;
  margin-left: 16rpx;
}

.lesson .marks {
  width: 210rpx;
  height: 48rpx;
  background: #000;
  opacity: 0.4;
  border-radius: 0rpx 0rpx 12rpx 12rpx;
  margin-top: -48rpx;
}