.search-group {
  background-color: #fff;
  width: 100%;
  height: 128rpx;
  display: flex;
  align-items: center;
}

.search-group .search {
  background-color: #f5f5f5;
  width: 690rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  border-radius: 10rpx;
  margin-left: 30rpx;
}

.search-group .search .icon {
  width: 28rpx;
  height: 28rpx;
  margin-left: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.search-group .search .icon image {
  width: 28rpx;
  height: 28rpx;
}

.search-group .search .input {
  margin-left: 15rpx;
  width: 587rpx;
}

.search-group .search .input input {
  font-size: 30rpx;
}

.search-group .search .input .earch-placeholder {
  color: #b7b7b7;
  font-size: 30rpx;
}

.student-sort {
  margin-top: 24rpx;
  margin-bottom: 24rpx;
  margin-left: 30rpx;
  display: flex;
  align-items: center;
}

.student-sort image {
  width: 26rpx;
  height: 24rpx;
  margin-right: 16rpx;
}

.student-sort text {
  color: #707888;
  font-size: 26rpx;
}

.student-group {
  width: 100%;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.student-line {
  display: flex;
  align-items: center;
  width: 750rpx;
  height: 135rpx;
}

.student-line .checked {
  margin-left: 30rpx;
  width: 50rpx;
  height: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 24rpx;
}

.student-line .avatar {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-weight: bold;
  font-size: 24rpx;
  background-color: #2b87ff;
  border-radius: 100%;
  margin-right: 24rpx;
}

.student-line .avatar image {
  width: 80rpx;
  height: 80rpx;
}

.student-line .content {
  display: flex;
  align-items: center;
  width: 616rpx;
  height: 135rpx;
  border-bottom: solid 1rpx #eff0f1;
}

.student-line .no-border {
  border: 0;
}

.student-line .content .info {
  display: flex;
  flex-direction: column;
  width: 312rpx;
}

.student-line .content .info {
  font-size: 34rpx;
  color: #181d24;
  line-height: 54rpx;
}

.student-line .content .subtitle {
  font-size: 26rpx;
  color: #707888;
  width: 200rpx;
  display: flex;
  justify-content: flex-end;
}

.total {
  color: #8c95a7;
  font-size: 24rpx;
  display: flex;
  justify-content: center;
  margin-top: 32rpx;
  width: 750rpx;
}

.select-info {
  width: 750rpx;
  height: 170rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  border-top: 1px solid #eff0f1;
}

.select-info .select {
  width: 690rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.select-info .select .title {
  color: #8c95a7;
  font-size: 26rpx;
}

.select-info .select .title .name {
  color: #181d24;
  font-weight: bold;
  font-size: 34rpx;
}

.select-info .select .confirm {
  width: 200rpx;
  height: 73rpx;
}

.select-info .select .confirm button {
  width: 200rpx;
  height: 73rpx;
  background: #5fcd64;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 30rpx;
  border: 0;
}

.select-info .select .confirm button::after {
  border: 0;
}

.select-info .select .no-select button {
  width: 200rpx;
  height: 73rpx;
  background: #C7C7C7;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 30rpx;
  border: 0;
}

.select-info .select .no-select button::after {
  border: 0;
}

.common-bottom {
  width: 750rpx;
  height: 300rpx;
}

.button-line {
  width: 100%;
  height: 120rpx;
  display: flex;
  align-items: center;
  background-color: #fff;
  margin-top: 24rpx;
}

.button-line .icon {
  width: 44rpx;
  height: 44rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 30rpx;
}

.button-line .icon image {
  width: 38rpx;
  height: 38rpx;
}

.button-line .content {
  width: 322rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 24rpx;
  color: #181d24;
  font-size: 34rpx;
}

.button-line .value {
  width: 300rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
  color: #707888;
  font-size: 26rpx;
}
