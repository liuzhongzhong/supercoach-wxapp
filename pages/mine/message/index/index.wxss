/* pages/mine/message/index/index.wxss */
.select-user {
  width: 750rpx;
  height: 120rpx;
  background-color: #FFF;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.select-user .title {
  margin-left: 30rpx;
  width: 140rpx;
  color: #181D24;
  font-size: 34rpx;
}

.select-user .value {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 520rpx;
  margin-left: 30rpx;
  justify-content: flex-end;
}

.select-user .value .content {
  color: #CFCFCF;
  font-size: 34rpx;
}

.select-user .value .arrow image{
  width: 14rpx;
  height: 24rpx;
  margin-left: 16rpx;
}

.message-content {
  display: flex;
  width: 750rpx;
  background-color: #FFF;
  flex-direction: column;
  margin-top: 30rpx;
}

.message-content .header{
  display: flex;
  width: 690rpx;
  margin-left: 30rpx;
  margin-top: 48rpx;
  flex-direction: row;
  align-items: flex-end;
  justify-content: space-between;
}

.message-content .header .title{
  color: #181D24;
  font-size: 34rpx;
}

.message-content .header .title .subtitle{
  color: #CFCFCF;
  font-size: 22rpx;
  margin-left: 30rpx;
}

.message-content .header .tempset{
  color:  #5FCD64;
  font-size: 26rpx;
}

.message-content .templist {
  margin-top: 40rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 30rpx;
  width: 720rpx;
  height: 60rpx;
  white-space: nowrap;
}

.message-content .templist .span-inline {
  display: inline-block;
  height: 60rpx;
  margin-right: 32rpx;
}

.message-content .templist .span-inline .span{
  height: 60rpx;
  background-color: #F5F5F5;
  color: #181D24;
  font-size: 24rpx;
  padding-left: 24rpx;
  padding-right: 24rpx;
  border-radius: 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.message-content .templist .span-inline .selected{
  background-color: #E5F7E6;
  color: #2EAB34;
  border: 1rpx solid #5FCD64;
}

.message-content .message-input {
  width: 690rpx;
  margin-left: 30rpx;
  margin-top: 40rpx;
  display: flex;
  flex-direction: column;
}