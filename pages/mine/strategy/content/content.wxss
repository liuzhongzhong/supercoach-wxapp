/* pages/mine/strategy/content/content.wxss */
page {
  background-color: #FFFFFF;
}

.title {
  width: 690rpx;
  margin-left: 30rpx;
  border-bottom: 1rpx solid #EFF0F1;
  color: #181D24;
  font-size: 34rpx;
  font-weight:bold;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}

.content {
  margin-top:  40rpx;
  width: 690rpx;
  margin-left: 30rpx;
  font-size: 30rpx;
  color: #181D24;
  line-height: 64rpx;
}

.content image{
  width:690rpx;
height:230rpx;
border-radius:12rpx;
margin-top: 50rpx;
}

.solve {
  display: flex;
  flex-direction: column;
  width: 690rpx;
  margin-top: 72rpx;
  margin-left: 30rpx;
}

.solve .solve-title{
  color: #707888;
  font-size: 26rpx;
}

.solve .solve-button{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 40rpx;
  justify-content: center;
}

.solve .solve-button .button{
  display: flex;
  flex-direction: row;
  align-items: center;
  color: #181D24;
  font-size: 26rpx;
  padding: 16rpx 24rpx 16rpx 24rpx;
  border: 1rpx solid #9FA9BD;
  border-radius: 12rpx;
}

.solve .solve-button .order {
  color: #5FCD64;
  border: 1rpx solid #5FCD64;
}

.solve .solve-button .button image{
  width: 24rpx;
  height: 24rpx;
  margin-right: 12rpx;
}