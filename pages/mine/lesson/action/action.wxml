          </view>
          <view class="inline-view">
            <view class="module">
              <image src="/images/mine-action-customize.png" style="width:50rpx;height:45rpx;"></image>
              <text>自定义</text>
            </view>
          </view>
        </scroll-view>
      </view>
    </view>
  </view>

  <view class="select-area">
    <view class="title">
      <view class="main">
        <text>训练动作</text>
      </view>
      <view class="add-title">
        <image src="/images/mine-lesson-action-add.png"></image>
        <text>新增模块</text>
      </view>
    </view>
    <view class="value">
      <view class="action-list">
        <view class="action">
          <text>热身训练</text>
        </view>
