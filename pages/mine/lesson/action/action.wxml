      <view class="show-more">
        <image src="/images/mine-lesson-action-more.png"></image>
        <text>展开更多</text>
      </view>
    </view>
  </view>

  <view class="select-area">
    <view class="title">
      <view class="main">
        <text>组数（组）</text>
      </view>
    </view>
    <view class="value">
      <view class="action-list">
        <view class="action no-bottom">
          <text>1</text>
        </view>
        <view class="action selected no-bottom">
          <text>3</text>
        </view>
        <view class="action no-bottom">
          <text>5</text>
        </view>
        <view class="action nowarp no-bottom">
          <text>自定义</text>
        </view>
      </view>
    </view>
  </view>

  <view class="select-area">
    <view class="title">
      <view class="main">
        <text>次数（次）</text>
      </view>
    </view>
    <view class="value">
      <view class="action-list">
        <view class="action no-bottom">
          <text>1</text>
        </view>
        <view class="action selected no-bottom">
          <text>3</text>
        </view>
        <view class="action no-bottom">
          <text>5</text>
        </view>
        <view class="action nowarp no-bottom">
          <text>自定义</text>
        </view>
      </view>
    </view>
  </view>

  <view class="select-area">
    <view class="title">
      <view class="main">
