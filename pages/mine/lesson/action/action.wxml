  <view class="select-area">
    <view class="title">
      <text>学习/训练类型</text>
    </view>
    <view class="value">
      <view class="module-list">
        <scroll-view class="scroll-view" scroll-x>
          <view class="inline-view">
            <view class="module selected">
              <image src="/images/mine-action-warm.png"></image>
              <text>热身训练</text>
            </view>
          </view>
          <view class="inline-view">
            <view class="module">
              <image src="/images/mine-action-strength.png"></image>
              <text>热身训练</text>
            </view>
          </view>
          <view class="inline-view">
            <view class="module">
              <image src="/images/mine-action-aerobic.png" style="width:54rpx;height:50rpx;"></image>
              <text>热身训练</text>
            </view>
          </view>
          <view class="inline-view">
            <view class="module">
              <image src="/images/mine-action-stretch.png" style="width:54rpx;height:50rpx;"></image>
              <text>热身训练</text>
