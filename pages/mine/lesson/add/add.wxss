/* pages/mine/lesson/add/add.wxss */

.input-lesson {
  width: 750rpx;
  height: 120rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #FFF;
}

.input-lesson .title{
  margin-left: 30rpx;
  color: #181D24;
  font-size: 34rpx;
  width: 172rpx;
}

.input-lesson .input{
  width: 518rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.input-lesson .input input{
  width: 518rpx;
}

.input-lesson .input .input-placeholder{
  color: #CFCFCF;
}

.select-part {
  margin-top: 32rpx;
  width: 750rpx;
  background-color: #FFF;
  display: flex;
  flex-direction: column;
}

.select-part .title{
  margin-top: 58rpx;
  margin-left: 30rpx;
  color: #181D24;
  font-size: 34rpx;
}

.select-part .part-group{
  margin-top: 48rpx;
  margin-left: 30rpx;
  width: 690rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
}

.select-part .part-group .part{
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  width: 80rpx;
  margin-right: 20rpx;
  margin-bottom: 32rpx;
}

.select-part .part-group .no-warp {
  margin-right: 0;
}

.select-part .part-group .part .delete{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 34rpx;
  height: 34rpx;
  z-index: 999;
  position: relative;
  top: 0;
  right: -6rpx;
}

.select-part .part-group .part .delete image{
  width: 34rpx;
  height: 34rpx;
}

.select-part .part-group .part .span{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 80rpx;
  height: 80rpx;
  color: #181D24;
  font-size: 28rpx;
  background-color: #F5F5F5;
  border-radius: 100%;
  margin-top: -24rpx;
}