/* pages/mine/data/index/index.wxss */

.header-background {
  background-color: #5fcd64;
  width: 750rpx;
  height: 238rpx;
  display: flex;
  flex-direction: column;
}

.header-background .data-select {
  width: 690rpx;
  margin-left: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
  color: #fff;
  font-size: 24rpx;
  margin-top: 30rpx;
}

.header-background .data-select image {
  width: 20rpx;
  height: 12rpx;
  margin-left: 16rpx;
}

.header-data {
  width: 690rpx;
  background-color: #fff;
  border-radius: 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 30rpx;
  margin-top: -130rpx;
}

.header-data .data-margin {
  width: 570rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin-top: 56rpx;
  margin-bottom: 56rpx;
  margin-left: 60rpx;
}

.header-data .data-margin .data-line {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.header-data .data-margin .data-line .data-num {
  color: #181d24;
  font-size: 44rpx;
  font-weight: bold;
}

.header-data .data-margin .data-line .data-name {
  color: #707888;
  font-size: 26rpx;
  margin-top: 10rpx;
}

.templist-line {
  width: 750rpx;
  background-color: #fff;
  margin-top: 40rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 120rpx;
  border-bottom: 1rpx solid #eff0f1;
}

.templist {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 30rpx;
  width: 720rpx;
  height: 60rpx;
  white-space: nowrap;
}

.templist .span-inline {
  display: inline-block;
  height: 60rpx;
  margin-right: 32rpx;
}

.templist .span-inline .span {
  height: 60rpx;
  background-color: #f5f5f5;
  color: #181d24;
  font-size: 24rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  border-radius: 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.templist .span-inline .selected {
  background-color: #e5f7e6;
  color: #2eab34;
  border: 1rpx solid #5fcd64;
  box-sizing: border-box;
}

.data-area {
  display: flex;
  flex-direction: column;
  background-color: #fff;
  margin-bottom: 32rpx;
}

.data-area .header-line {
  width: 690rpx;
  margin-left: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin-top: 50rpx;
}

.data-area .header-line .header-title {
  color: #181d24;
  font-size: 38rpx;
  font-weight: bold;
}

.data-area .header-line .accuracy-select {
  color: #919db4;
  font-size: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.data-area .header-line .accuracy-select .day {
  border-radius: 8rpx 0rpx 0rpx 8rpx;
  width: 72rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1rpx solid #919db4;
  border-right: 0rpx;
}

.data-area .header-line .accuracy-select .month {
  width: 72rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1rpx solid #919db4;
}

.data-area .header-line .accuracy-select .year {
  border-radius: 0rpx 8rpx 8rpx 0rpx;
  width: 72rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1rpx solid #919db4;
  border-left: 0rpx;
}

.data-area .header-line .accuracy-select .selected {
  background-color: #919db4;
  color: #fff;
}

.data-area .date-select {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin-top: 42rpx;
  color: #919db4;
  font-size: 20rpx;
  font-weight: bold;
  height: 40rpx;
  width: 246rpx;
  margin-left: 252rpx;
}

.data-area .date-select-one {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 42rpx;
  color: #919db4;
  font-size: 20rpx;
  font-weight: bold;
  height: 40rpx;
  width: 110rpx;
  margin-left: 320rpx;
}

.data-area .date-select-year {
  width: 86rpx;
  height: 40rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  color: #919db4;
  font-size: 20rpx;
  padding-left: 12rpx;
  padding-right: 12rpx;
  border: 1rpx solid #919db4;
  border-radius: 8rpx;
}

.data-area image {
  width: 14rpx;
  height: 12rpx;
}

.data-area .data-ff {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  margin-top: 20rpx;
  margin-bottom: 32rpx;
}

.data-area .data-lock {
  width: 730rpx;
  height: 400rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: rgba(255, 255, 255, 0.9);
  margin-top: -432rpx;
  margin-left: 10rpx;
  z-index: 999;
  margin-bottom: 32rpx;
}

.data-area .data-lock .data-lock-name {
  color: #38b53e;
  font-size: 28rpx;
  font-weight: bold;
}

.data-area .data-lock .data-lock-button {
  width: 160rpx;
  height: 55rpx;
  background: #5fcd64;
  border-radius: 10rpx;
  color: #fff;
  font-size: 22rpx;
  text-align: center;
  margin-top: 46rpx;
  line-height: 55rpx;
}

ff-canvas {
  width: 730rpx;
  height: 400rpx;
}

.contact {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 16rpx;
}

.contact button {
  border: 0rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #707888;
  font-size: 24rpx;
  padding: 0rpx;
  background-color: #f7f7f7;
}

.contact button::after {
  border: 0rpx;
}

.date-select-month {
  margin-left: 16rpx;
}
