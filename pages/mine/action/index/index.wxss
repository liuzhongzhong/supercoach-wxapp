/* pages/mine/action/index/index.wxss */

page {
  background-color: #fff;
}

.action-container {
  width: 100%;
  display: flex;
  flex-direction: row;
  border-top: 1rpx solid #e5e5e5;
}

.module-list {
  width: 180rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-right: 1rpx solid #e5e5e5;
}

.module-list .header {
  width: 180rpx;
  margin-top: 40rpx;
}

.module-list .module {
  width: 118rpx;
  height: 118rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #f5f5f5;
  border-radius: 6rpx;
  margin-bottom: 24rpx;
  color: #181d24;
}

.module-list .selected {
  background-color: #e5f7e6;
  border: 2rpx solid #5fcd64;
  color: #2eab34;
}

.module-list .module .icon {
  width: 38rpx;
  height: 38rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.module-list .module .icon image {
  width: 38rpx;
  height: 38rpx;
}

.module-list .module .name {
  font-size: 20rpx;
  margin-top: 12rpx;
}

.action-list {
  width: 510rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  margin-top: 40rpx;
  margin-left: 30rpx;
}

.action-list .title {
  display: flex;
  align-items: center;
  flex-direction: row;
  justify-content: space-between;
}

.action-list .title .name {
  font-size: 34rpx;
  font-weight: bold;
  color: #181d24;
}

.action-list .title .edit {
  font-size: 26rpx;
  color: #707888;
}

.action-list .actions-group {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-top: 32rpx;
}

.action-list .actions-group .action {
  display: flex;
  justify-content: center;
  align-items: center;
  color: #181d24;
  font-size: 24rpx;
  background-color: #f5f5f5;
  width: 150rpx;
  height: 70rpx;
  border-radius: 6rpx;
  margin-right: 30rpx;
  margin-bottom: 30rpx;
}

.action-list .actions-group .no-warp {
  margin-right: 0rpx;
}

.action-list .add-action {
  width: 510rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1rpx solid #c0c0c0;
  border-radius: 10rpx;
  margin-top: 26rpx;
}

.action-list .add-action image {
  width: 26rpx;
  height: 26rpx;
}

.action-list .add-action text {
  color: #707888;
  font-size: 26rpx;
  margin-left: 16rpx;
}

.popup-view {
  width: 750rpx;
  height: 100%;
  position: fixed;
  top: -50rpx;
  left: 0;
  z-index: 99999;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.popup {
  width: 622rpx;
  background-color: #fff;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.popup .title {
  font-size: 32rpx;
  font-weight: bold;
  color: #181d24;
  display: flex;
  justify-content: center;
  margin-top: 64rpx;
}

.popup .input {
  margin-top: 48rpx;
  width: 506rpx;
  height: 88rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1px solid #d0d0d0;
  border-radius: 10rpx;
}

.popup .input input {
  margin-left: 24rpx;
  width: 458rpx;
  height: 88rpx;
  color: #181d24;
  font-size: 28rpx;
}

.popup .input .placeholder-class {
  color: #cfcfcf;
  font-size: 28rpx;
}

.popup .button {
  margin-top: 72rpx;
  margin-bottom: 72rpx;
}

.popup .button button {
  width: 506rpx;
  height: 88rpx;
  background: #5fcd64;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  border: 0;
}

.popup .button button::after {
  border: 0;
}

.popup-view .close-button {
  width: 56rpx;
  height: 56rpx;
  margin-top: 64rpx;
}

.popup-view .close-button image {
  width: 56rpx;
  height: 56rpx;
}
