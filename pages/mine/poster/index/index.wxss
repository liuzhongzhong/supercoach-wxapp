/* pages/mine/poster/index/index.wxss */
page {
  background-color: #FFFFFF;
}

.templist {
  margin-top: 40rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 30rpx;
  width: 720rpx;
  height: 60rpx;
  white-space: nowrap;
}

.templist .span-inline {
  display: inline-block;
  height: 60rpx;
  margin-right: 32rpx;
}

.templist .span-inline .span{
  min-width: 84rpx;
  height: 60rpx;
  background-color: #F5F5F5;
  color: #181D24;
  font-size: 24rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  border-radius: 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.templist .span-inline .selected{
  background-color: #5FCD64;
  color: #FFFFFF;
}

.poster-list {
  width: 690rpx;
  margin-top: 48rpx;
  margin-left: 30rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.poster-list .poster {
  display: flex;
  flex-direction: column;
  width:214rpx;
  margin-right: 24rpx;
  margin-bottom: 72rpx;
}

.poster-list .no-margin {
  margin-right: 0rpx;
}

.poster-list .poster .vip {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  color: #FFFFFF;
  background-color: #FF6561;
  border-radius:0rpx 12rpx 0rpx 12rpx;
  width:66rpx;
  height:34rpx;
  position: relative;
  left: 148rpx;
}

.poster-list .poster .no-vip {
  width:66rpx;
  height:34rpx;
  position: relative;
  left: 148rpx;
}

.poster-list .poster .image{
  margin-top: -34rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width:214rpx;
height:300rpx;
border-radius:12rpx;
}

.poster-list .poster .image image{
  width:214rpx;
height:300rpx;
border-radius:12rpx;
}


.poster-list .poster .title{
  display: flex;
  flex-direction: column;
  margin-top: 24rpx;
  width: 214rpx;
}

.poster-list .poster .title .main{
  color: #131526;
  font-size: 26rpx;
}

.poster-list .poster .title .sub{
  color: #707888;
  font-size: 22rpx;
}