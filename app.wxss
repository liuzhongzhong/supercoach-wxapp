/**app.wxss**/
@import './components/weui/weui-wxss/dist/style/weui.wxss';

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.container-page {
  display: flex;
  flex-direction: column;
}

.default-avatar {
  width: 84rpx;
  height: 84rpx;
  background: #2b87ff;
  border-radius: 50%;
  font-size: 24rpx;
  font-weight: 500;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}

.select-cells-group .select-cells {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 120rpx;
  background-color: #FFF;
}

.select-cells-group .select-cells .icon {
  width: 30rpx;
  height: 100%;
}

.select-cells-group .select-cells .content {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 720rpx;
  height: 100%;
  border-bottom: 1rpx solid #EFF0F1;
}

.select-cells-group .select-cells .no-border {
  border: 0;
}


.select-cells-group .select-cells .content .title{
  width: 640rpx;
  height: 100%;
  display: flex;
  align-items: center;
  color: #181D24;
  font-size: 34rpx;
}

.select-cells-group .select-cells .content .arrow{
  width: 50rpx;
  height: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.select-cells-group .select-cells .content .arrow image{
  width: 14rpx;
  height: 24rpx;
}

.select-cells-group .select-cells-group {
  display: flex;
  flex-direction: column;
}